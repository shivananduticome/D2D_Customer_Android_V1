<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
 <data>
     <variable
         name="subcategoryDescViewModel"
         type="com.d2d.customer.viewmodel.SubCategoryDescriptionViewModel" />
 </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:id="@+id/lnrImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/mainCourseImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnrImageWithTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/lnrImageView"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/vegOrNonVegImageView"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/veg"
                    />
                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="McSaver Small Wedges"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:maxLines="2"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnrDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/lnrImageView"
                android:layout_below="@+id/lnrImageWithTitle">
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="McSaver Small Wedges"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="2"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/lnrImageView"
                android:layout_below="@+id/lnrDescription">
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AED 116"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addOnsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Add"
                    android:fontFamily="@font/roboto_regular"
                    />
            </LinearLayout>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
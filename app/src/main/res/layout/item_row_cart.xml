<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="10dp"
      >
     <LinearLayout
         android:id="@+id/lnrImageView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <ImageView
             android:id="@+id/imageView"
             android:layout_width="50dp"
             android:layout_height="50dp"
             />
     </LinearLayout>
      <LinearLayout
          android:id="@+id/lnrImageWithTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/lnrImageView"
          android:orientation="horizontal">
          <ImageView
              android:id="@+id/vegOrNonVegImageView"
              android:layout_width="10dp"
              android:layout_height="10dp"
              android:layout_marginTop="8dp"
              android:background="@drawable/veg"
              />
          <TextView
              android:id="@+id/tvItemName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="McSaver Small Wedges"
              android:fontFamily="@font/roboto_regular"
              android:textColor="@color/black"
              android:textSize="16sp"
              android:maxLines="2"
              android:layout_weight="1"
              />
          <TextView
             android:id="@+id/tvDeleteItem"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableRight="@drawable/ic_red_delete_outline"
              android:layout_gravity="right"
              />
      </LinearLayout>

      <LinearLayout
          android:id="@id/lnrAddons"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_toRightOf="@+id/lnrImageView"
          android:layout_below="@+id/lnrImageWithTitle"
          android:layout_marginLeft="25dp"
          android:layout_marginRight="20dp"
          >
          <TextView
              android:id="@+id/tvAddOnsName"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="Add-ons-Name"
              android:fontFamily="@font/roboto_regular"
              android:textColor="@color/black"
              android:alpha="0.5"
              android:textSize="16sp"
              android:layout_weight="1"
              />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_toRightOf="@+id/lnrImageView"
          android:layout_below="@+id/lnrAddons"
          android:layout_marginLeft="25dp"
          android:layout_marginTop="10dp"
          >
          <TextView
              android:id="@+id/tvPrice"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="AED 116"
              android:fontFamily="@font/roboto_regular"
              android:textColor="@color/d2d_color"
              android:textSize="16sp"
              android:layout_weight="1"
              />
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_weight="1"
              >
              <TextView
                  android:id="@+id/tvDecrement"
                  android:layout_width="30dp"
                  android:layout_height="wrap_content"
                  android:text="-"
                  android:textSize="18sp"
                  android:background="@color/d2d_color"
                  android:textColor="@color/white"
                  android:gravity="center"
                  />
              <TextView
                  android:id="@+id/tvItemBaseQuantity"
                  android:layout_width="30dp"
                  android:layout_height="wrap_content"
                  android:text="5"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:textColor="@color/black"
                  android:fontFamily="@font/roboto_regular"
                  />
              <TextView
                  android:id="@+id/tvIncrement"
                  android:layout_width="30dp"
                  android:layout_height="wrap_content"
                  android:text="+"
                  android:textSize="18sp"
                  android:background="@color/d2d_color"
                  android:textColor="@color/white"
                  android:gravity="center"
                  />
          </LinearLayout>

      </LinearLayout>

  </RelativeLayout>
</LinearLayout>